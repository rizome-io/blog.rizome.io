{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ES2018" /* or at least ES2015 */,
    "module": "ESNext" /* or at least ES2015 */,
    "lib": ["dom"] /* <-- required! */,
    "jsx": "preserve" /* <-- required! */,
    "moduleResolution": "node" /* <-- required! */,

    /* for mixed ts/js codebase */
    "allowJS": true,
    "outDir": "./build" /* this won't be used by ts-loader */
    /* other options... */
  }
}
